---
import {
  FaPython,
  FaReact,
  FaJs,
  FaHtml5,
  FaCss3Alt,
  FaNodeJs,
} from "react-icons/fa";
import { SiAstro, SiTypescript } from "react-icons/si";
import catTyping from "src/assets/cat-typing.gif";
---

<div
  class="about-me w-full flex flex-col md:flex-row items-center justify-center px-8 md:px-16 gap-12 md:gap-20"
>
  <div class="text-left md:text-left w-full md:w-2/3 lg:w-2/5">
    <h1 class="aboutMeTitle text-6xl md:text-6xl lg:text-9xl">about me</h1>
    <h2 class="aboutMeSubtitle text-3xl md:text-5xl lg:text-6xl">
      just an idiot wasting oxygen :)
    </h2>
    <p class="aboutMeText text-gray-500 text-lg md:text-xl lg:text-3xl">
      i like sleep and watch anime
    </p>
    <div class="technologies mt-6">
      <div class="flex flex-wrap gap-4">
        <FaPython className="text-4xl text-blue-500" title="Python" />
        <FaJs className="text-4xl text-yellow-400" title="JavaScript" />
        <SiTypescript className="text-4xl text-blue-700" title="TypeScript" />
        <FaNodeJs className="text-4xl text-green-600" title="Node.js" />
        <SiAstro className="text-4xl text-purple-600" title="Astro" />
        <FaHtml5 className="text-4xl text-orange-500" title="HTML5" />
        <FaReact className="text-4xl text-blue-400" title="React" />
        <FaCss3Alt className="text-4xl text-blue-600" title="CSS3" />
      </div>
    </div>
  </div>
  <div class="flex justify-center items-center w-full md:w-1/3">
    <img
      src={catTyping.src}
      alt="Cat typing"
      class="w-48 h-48 md:w-64 md:h-64 lg:w-96 lg:h-96 object-contain"
      loading="lazy"
    />
  </div>
</div>

<style>
  .aboutMeTitle,
  .aboutMeSubtitle {
    @apply font-bold;
    font-family: "Caveat", cursive;
  }

  .aboutMeText {
    font-family: "Caveat";
  }
</style>
