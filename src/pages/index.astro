---
import Layout from "../layouts/Layout.astro";
import { socialLinks } from "../data/socialLinks";
import AnimatedText from "../components/AnimatedText";
import SocialIcon from "../components/SocialIcon";
---

<Layout title="hi there ðŸ‘‹">
    <main
        id="main-bg"
        class="min-h-screen flex items-center justify-center p-8 md:p-16 overflow-hidden"
    >
        <div class="text-white space-y-6 text-center">
            <AnimatedText
                text="Hi there!"
                className="text-6xl md:text-8xl font-handwriting"
                client:load
            />
            <AnimatedText
                className="text-5xl md:text-9xl font-handwriting"
                delay={0.2}
                client:load
            >
                I'm <span class="text-blue-500">Stageddat</span> :)
            </AnimatedText>
            <div class="flex justify-center gap-8 pt-6">
                {
                    socialLinks.map((link, index) => (
                        <SocialIcon {...link} client:load />
                    ))
                }
            </div>
        </div>
    </main>

    <script>
        import "../scripts/dynamicBackground";
    </script>
</Layout>
