---
import Layout from "../layouts/Layout.astro";
import { socialLinks } from "../data/socialLinks";
import AnimatedText from "../components/AnimatedText";
import SocialIcon from "../components/SocialIcon";
---

<Layout title="hi there ðŸ‘‹">
    <main
        class="min-h-screen bg-gradient-to-br from-neutral-900 to-neutral-800 flex items-center p-8 md:p-16 overflow-hidden"
    >
        <div class="text-white space-y-6 max-w-2xl pl-24">
            <AnimatedText
                text="Hi there!"
                className="text-6xl md:text-8xl font-handwriting"
                client:load
            />
            <AnimatedText
                text="I'm Stageddat :)"
                className="text-5xl md:text-8xl font-handwriting"
                delay={0.2}
                client:load
            />
            <div class="flex gap-8 pt-6">
                {
                    socialLinks.map((link, index) => (
                        <SocialIcon {...link} client:load />
                    ))
                }
            </div>
        </div>
    </main>
</Layout>
